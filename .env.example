# Django Settings
SECRET_KEY=django-insecure-change-me-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=core.settings.development

# Database Configuration
DB_NAME=mopc_platform
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432
DB_CONN_MAX_AGE=60

# Redis Configuration
REDIS_URL=redis://localhost:6379/1
REDIS_MAX_CONNECTIONS=50
CACHE_KEY_PREFIX=mopc
CACHE_TIMEOUT=300

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=7
JWT_SECRET_KEY=

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@mopc.mx
SERVER_EMAIL=admin@mopc.mx

# Security Settings
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_DOMAIN=
CSRF_COOKIE_DOMAIN=
CSRF_COOKIE_AGE=3600
CSRF_COOKIE_HTTPONLY=True
SECURE_REFERRER_POLICY=same-origin

# Logging Configuration
LOG_FILE=/app/logs/django.log
ERROR_LOG_FILE=/app/logs/django_error.log

# Sentry Configuration
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT=production

# API Configuration
API_PAGE_SIZE=20
API_THROTTLE_ANON=100/hour
API_THROTTLE_USER=1000/hour

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_TIME_LIMIT=1800
CELERY_WORKER_CONCURRENCY=4

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760

# Static Files
STATIC_ROOT=/app/staticfiles
STATIC_URL=/static/
MEDIA_ROOT=/app/media
MEDIA_URL=/media/

# Admin Settings
ADMINS=Developer:dev@mopc.mx
MANAGERS=Developer:dev@mopc.mx

# Testing Configuration
MOCK_EXTERNAL_SERVICES=True
RUN_COVERAGE=False

# Session Configuration
SESSION_COOKIE_AGE=3600